<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tamanio_Subtituo">
        <Toolbar
            android:id="@+id/toolbarUbication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:src="@drawable/platzi_conf_2"
                        android:scaleType="centerCrop"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="10dp"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDetailNombreUbicacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lugar PlatziConf"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center_horizontal"
                            android:layout_margin="5dp"/>
                        <LinearLayout
                            android:id="@+id/lLdireccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvDireccionLugar"
                            android:drawableStart="@drawable/ic_place"
                            android:drawablePadding="10dp"
                            android:paddingStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Direccion lugar"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="left"
                            android:layout_margin="20dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:alpha="0.3"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lLTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvTelefonoLugar"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawablePadding="10dp"
                            android:paddingStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Telefono lugar"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="left"
                            android:layout_margin="20dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:alpha="0.3"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lLLinkLugar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                            android:id="@+id/tvLinkLugar"

                            android:drawableStart="@drawable/ic_baseline_insert_link"
                            android:drawablePadding="10dp"
                            android:paddingStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Link del lugar"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="left"
                            android:layout_margin="20dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:alpha="0.3"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"/>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>